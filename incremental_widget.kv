<IncrementalWidget>:
    orientation: 'vertical'
    padding: [10, 10, 10, 10]
    #---- PARTIE TABLEAU DE SAISIE ----#
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.3
        GridLayout:
            cols : 5
            size_hint_y: None
            height: 30
            row_default_height: 30
            row_force_default: True
            padding: [0, 4]
            spacing: [4, 4]
            Label:
                text: 'Temps [s]'
            Label:
                text: 'Inclinaison [°]'
            Label:
                text: 'Vitesse [km/h]'
            Label:
                text: 'Vitesse Asc. [m/h]'
            Label:
                text: ''
                size_hint_x: None
                width: 100

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: points_grid
                cols: 5
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 40
                row_force_default: True
                padding: [0, 4]
                spacing: [4, 4]

        Button:
            text: 'Ajouter un point'
            size_hint_y: None
            height: 50
            on_press: root.add_point()
    #---- ESPACE DE SEPARATION ----#
    BoxLayout:
        size_hint_y: None
        height: '10dp'

    #---- PARTIE GRAPHIQUE ----#
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            ToggleButton:
                text: 'Inclinaison'
                group: 'graph_axis'
                state: 'down'
                on_press: root.set_graph_variable('incl')
            ToggleButton:
                text: 'Vitesse'
                group: 'graph_axis'
                on_press: root.set_graph_variable('speed')
            ToggleButton:
                text: 'Vitesse Asc.'
                group: 'graph_axis'
                on_press: root.set_graph_variable('asc')

        BoxLayout:
            id: graph_view
    #---- ESPACE DE SEPARATION ----#
    BoxLayout:
        size_hint_y: None
        height: '10dp'  
    #---- PARTIE EVENEMENTS ----#
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.3

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            ToggleButton:
                text: "Start"
                id : start_button
                on_release: root.start_test()
                group: "test_control"
            ToggleButton:
                text: "Stop"
                id : stop_button
                on_release: root.stop_test()
                group: "test_control"
                state: "down"
   
        GridLayout:
            cols: 5
            size_hint_y: None
            height: self.minimum_height
            row_default_height: "30dp"
            row_force_default: True

            # En-têtes
            Label: 
                text: "Temps [s]"
            Label: 
                text: "Inclinaison [°]"
            Label: 
                text: "Vitesse [km/h]"
            Label: 
                text: "Vitesse Asc. [m/h]"
            Label: 
                text: ""
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: events_grid
                cols: 5
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "30dp"
                row_force_default: True
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Ajouter un événement"
                on_release: root.add_event()
        
