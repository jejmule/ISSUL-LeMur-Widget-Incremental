<IncrementalWidget>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        Label:
            text: 'Temps [s]'
        Label:
            text: 'Inclinaison [Â°]'
        Label:
            text: 'Vitesse [km/h]'
        Label:
            text: 'Vitesse Asc. [m/h]'
        Label:
            text: ''

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: points_grid
            cols: 5
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 40
            row_force_default: True
            padding: [0, 4]
            spacing: [4, 4]

    Button:
        text: 'Ajouter un point'
        size_hint_y: None
        height: 50
        on_press: root.add_point()

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.5

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            ToggleButton:
                text: 'Inclinaison'
                group: 'graph_axis'
                state: 'down'
                on_press: root.set_graph_variable('incl')
            ToggleButton:
                text: 'Vitesse'
                group: 'graph_axis'
                on_press: root.set_graph_variable('speed')
            ToggleButton:
                text: 'Vitesse Asc.'
                group: 'graph_axis'
                on_press: root.set_graph_variable('asc')

        BoxLayout:
            id: graph_view
